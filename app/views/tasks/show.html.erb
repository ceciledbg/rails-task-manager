<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<p><% if @task.completed %></p>
  <p><%= "You completed the task." %></p>
<p><% else %></p>
  <p><%= "You did not complete the task." %></p>
<p><% end %></p>

<%= link_to "Edit", edit_task_path(@task) %>

<%= link_to "Delete", task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "Go back to the tasks list", tasks_path %>
